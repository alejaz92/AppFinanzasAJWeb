@model Cuenta

@{
    ViewData["Title"] = "Editar Cuenta";
}
<h1>Editar Cuenta: @Model.CuentaNombre</h1>

<div asp-validation-summary="ModelOnly" class="text-danger"></div>

<form asp-action="Editar">
    <input type="hidden" asp-for="Id"/>

    <div class="mb-3">
        <label asp-for="CuentaNombre" class="form-label"></label>
        <input type="text" asp-for="CuentaNombre" class="form-control" />
        <span asp-validation-for="CuentaNombre" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary">Guardar</button>
    <a class="btn btn-secondary" asp-action="Index">Cancelar</a>

</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}